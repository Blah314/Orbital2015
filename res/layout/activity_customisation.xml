<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sg.com.yahoo.ryanlouck.orbital2015.CustomisationActivity" >

    <Button
        android:id="@+id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/start_level" />

    <TextView
        android:id="@+id/customisationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/placeholder"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/customisationTitle"
        android:layout_above="@+id/startButton"
        android:layout_centerHorizontal="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/diffText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_diff"
                android:textAppearance="?android:attr/textAppearanceMedium" />

            <Spinner
                android:id="@+id/diffSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:id="@+id/diceCheckbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:onClick="checkBoxListener"
                android:text="@string/choose_dice" />

            <CheckBox
                android:id="@+id/armiesCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_armies" />

            <CheckBox
                android:id="@+id/aiCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_ai" />


            <CheckBox
                android:id="@+id/upgradesCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_upgrades" />

            <CheckBox
                android:id="@+id/capitalCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_capital" />

            <CheckBox
                android:id="@+id/fowCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_fow" />

            <CheckBox
                android:id="@+id/turnCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_turns" />
			
			<CheckBox
                android:id="@+id/regionsCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_regions" />
                    
            <CheckBox
                android:id="@+id/hardcoreCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="checkBoxListener"
                android:text="@string/choose_hardcore" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>